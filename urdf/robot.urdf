<?xml version="1.0" ?>

<robot name="robot">

    <!-- Gazebo simulator tags -->
    <gazebo reference="link_chassis">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="link_caster_wheel">
        <material>Gazebo/Grey</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="link_left_wheel">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    <gazebo reference="link_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    <gazebo reference="joint_chassis_caster_wheel">
        <preserveFixedJoint>true</preserveFixedJoint> <!-- Don't fuse to chassis -->
    </gazebo>
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_chassis_left_wheel</leftJoint>
            <rightJoint>joint_chassis_right_wheel</rightJoint>
            <wheelSeparation>1.66</wheelSeparation> <!-- TODO: update for mesh tires -->
            <wheelDiameter>0.8</wheelDiameter> <!-- TODO: check if this is true -->
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>link_chassis</robotBaseFrame>
        </plugin>
    </gazebo>
        <gazebo reference="joint_laser_scan_chassis">
        <preserveFixedJoint>true</preserveFixedJoint> <!-- Don't fuse to chassis -->
    </gazebo>
    <gazebo reference="link_laser_scan">
        <material>Gazebo/DarkGrey</material>
    </gazebo>
    <gazebo reference="link_laser_scan">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize> <!-- Simulate rays -->
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle> <!-- ~ -90 deg -->
                        <max_angle>1.570796</max_angle> <!-- ~ 90 deg -->
                    </horizontal>
                </scan>
                <range> <!-- Should be outside "devide" cylinder! -->
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/laser/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Link - chassis -->
    <link name="link_chassis">
        <inertial>
            <mass value="10" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <geometry>
                <box size="2 1.3 0.4" />
            </geometry>
        </collision>

        <visual>
            <geometry>
                <!-- <box size="2 1.3 0.4" /> -->
                <mesh filename="package://robot_description/meshes/chassis.stl" />            
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />  <!-- from red to blue -->
            </material>
        </visual>
    </link>

    <!-- Link - left wheel -->
    <link name="link_left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>

        <!-- left tire -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0" />
            <geometry>
                <cylinder length="0.12" radius="0.4"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0" />
            <geometry>
                <!-- <cylinder length="0.12" radius="0.4"/> -->
                <mesh filename="package://robot_description/meshes/wheel.stl" />
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1" />  <!-- black -->
            </material>
        </visual>

        <!-- left axle -->
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>

        <!-- left spoke -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / left wheel -->
    <joint name="joint_chassis_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.5 0.65 0" />
        <child link="link_left_wheel" />
        <parent link="link_chassis" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - right wheel -->
    <link name="link_right_wheel">
        <!-- right tire -->
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0" />
            <geometry>
                <cylinder length="0.12" radius="0.4"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0" />
            <geometry>
                <!-- <cylinder length="0.12" radius="0.4"/> -->
                <mesh filename="package://robot_description/meshes/wheel.stl" />
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1" />  <!-- black -->
            </material>
        </visual>

        <!-- right axle -->
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>

        <!-- right spoke -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / right wheel -->
    <joint name="joint_chassis_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.5 -0.65 0" />
        <child link="link_right_wheel" />
        <parent link="link_chassis" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - caster wheel -->
    <link name="link_caster_wheel">
        <inertial> <!-- Is this correct? -->
            <mass value="1" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>

        <!-- Outer wheel-->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.25" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.25" />
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />  <!-- from red to blue -->
            </material>
        </visual>

        <!-- Inner wheel-->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.125" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.15" />
            <geometry>
                <sphere radius="0.125" />
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / caster wheel -->
    <joint name="joint_chassis_caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="0.75 0 -0.125" />
        <child link="link_caster_wheel" />
        <parent link="link_chassis" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - laser scan -->
    <link name="link_laser_scan">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.15" length="0.20"/>
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.15" length="0.20"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint - chassis - laser scan -->
    <joint name="joint_laser_scan_chassis" type="fixed">
        <origin rpy="0 0 0" xyz="0.8 0 0.3" />
        <child link="link_laser_scan" />
        <parent link="link_chassis" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

</robot>
