<?xml version="1.0" ?>

<robot name="robot">

    <!-- Gazebo simulator -->
    <gazebo reference="link_chassis">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="link_caster_wheel">
        <material>Gazebo/Grey</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="link_left_wheel">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    <gazebo reference="link_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    <gazebo reference="joint_chassis_caster_wheel">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <!-- Link - chassis -->
    <link name="link_chassis">
        <inertial>
            <mass value="10" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <geometry>
                <box size="2 1.3 0.4" />
            </geometry>
        </collision>

        <visual>
            <geometry>
                <!-- <box size="2 1.3 0.4" /> -->
                <mesh filename="package://robot_description/meshes/chassis.stl" />            
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />  <!-- from red to blue -->
            </material>
        </visual>
    </link>

    <!-- Link - left wheel -->
    <link name="link_left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>

        <!-- left tire -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0" />
            <geometry>
                <cylinder length="0.12" radius="0.4"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0" />
            <geometry>
                <!-- <cylinder length="0.12" radius="0.4"/> -->
                <mesh filename="package://robot_description/meshes/wheel.stl" />
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1" />  <!-- black -->
            </material>
        </visual>

        <!-- left axle -->
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>

        <!-- left spoke -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / left wheel -->
    <joint name="joint_chassis_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.5 0.65 0" />
        <child link="link_left_wheel" />
        <parent link="link_chassis" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - right wheel -->
    <link name="link_right_wheel">
        <!-- right tire -->
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0" />
            <geometry>
                <cylinder length="0.12" radius="0.4"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.18 0" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0" />
            <geometry>
                <!-- <cylinder length="0.12" radius="0.4"/> -->
                <mesh filename="package://robot_description/meshes/wheel.stl" />
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1" />  <!-- black -->
            </material>
        </visual>

        <!-- right axle -->
        <collision>
            <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
            <geometry>
                <cylinder length="0.12" radius="0.08"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>

        <!-- right spoke -->
        <collision>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
        </collision>
        <visual>
            <!-- <origin rpy="1.5707 0 0" xyz="0 -0.265 0.01" /> -->
            <origin rpy="1.5707 0 0" xyz="0 -0.12 0.01" />
            <geometry>
                <box size="0.6 0.05 0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / right wheel -->
    <joint name="joint_chassis_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.5 -0.65 0" />
        <child link="link_right_wheel" />
        <parent link="link_chassis" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - caster wheel -->
    <link name="link_caster_wheel">
        <inertial> <!-- Is this correct? -->
            <mass value="1" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
        </inertial>

        <!-- Outer wheel-->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.25" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.25" />
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />  <!-- from red to blue -->
            </material>
        </visual>

        <!-- Inner wheel-->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.125" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.15" />
            <geometry>
                <sphere radius="0.125" />
            </geometry>
            <material name="Gray">
                <color rgba="0.4 0.4 0.4 1" />  <!-- gray -->
            </material>
        </visual>
    </link>

    <!-- Joint - chassis / caster wheel -->
    <joint name="joint_chassis_caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="0.75 0 -0.125" />
        <child link="link_caster_wheel" />
        <parent link="link_chassis" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
</robot>
